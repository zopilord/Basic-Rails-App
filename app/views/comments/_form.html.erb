<h3>Comment!</h1>
<%= form_for [topic,post,comment], html: {class: "form-group"} do |f| %>
	<%= control_group_tag(comment.errors[:body]) do %>
			<div class="controls">
				<%= f.text_area :body, rows: 2 %>
			</div>
	<% end %>
	<div class="contorl-group">
		<div class="controls">
			<%= f.submit "Comment", class: 'btn' %>
		</div>
	</div>
<% end %>