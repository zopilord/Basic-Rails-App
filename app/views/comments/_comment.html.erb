<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <div class="well">
		<div class="media-body">
    <small>
      <%= comment.user.name %> commented on <%= comment.post.title %>  <%= time_ago_in_words(comment.created_at) %> ago
      <% if can? :destroy, comment %>
        | <%= link_to "Delete", comment_url_helper(comment), method: :delete, remote: true %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
	</div>
<% end %>