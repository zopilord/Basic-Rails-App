<div class="media">
  <%= link_to user, class: 'pull-left' do %>
    <%= image_tag(user.avatar.profile.url) if user.avatar? %>
  <% end %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to user.name, user %>
    </h4>
    <small>
      <b>
        Posts <span class="badge"><%= user.posts.count %></span>,
        Comments <span class="badge"><%= user.comments.count %></span>
      </b>
    </small>
  </div>
</div>