<h1>Topics</h1>
<div class="row">
  <div class="span8">
    <% if current_user %>
      <% @topics.each do |topic| %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">

                <%= link_to topic.name, topic %>
              </h4>
              <small>
                <%= topic.description %>
              </small>
            </div>
          </div>
        <% end %>
    <% else %>
      <% @topics.each do |topic| %>
        <% if topic.public == false %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                <p> Private Topic </p>
              </h4>
            </div>
          </div>
        <% else %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to topic.name, topic %>
              </h4>
              <small>
                <%= topic.description %>
              </small>
            </div>
          </div>
        <% end %>  
      <% end %>
    <% end %> 
    <%= will_paginate @topics %>
  </div>
  <div class="span4">
    <% if can? :create, Topic %>
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>